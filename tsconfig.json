{
    "compilerOptions": {
        "outDir": "./built",
//        "allowJs": true,
        "target": "es6",
        "module": "commonjs",
//        "types" : [ "node", "core-js"],
        "typeRoots" : ["./node_modules/@types", "./typings"],
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "strict": true,
        "sourceMap": true,
        "lib": ["es2015"]
    },
    "include": [
        "src/**/*",
        "typings/**/*"
    ]
}